@model BlogDetailDTO
<style>
    .hashtags {
      font-size: 16px;
      color: #000;
      margin-top: 15px;
      margin-left: 200px;
    }
    .hashtags span {
      display: block;
      margin-bottom: 15px;
    }
</style>
<!-- page title -->
<section style="padding:100px 0 40px" class="page-title bg-primary position-relative">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center">
        <h1 class="text-white font-tertiary">@Model.Category.Name</h1>
      </div>
    </div>
  </div>
  <!-- background shapes -->
  <img src="~/images/illustrations/page-title.png" alt="illustrations" class="bg-shape-1 w-100">
  <img src="~/images/illustrations/leaf-pink-round.png" alt="illustrations" class="bg-shape-2">
  <img src="~/images/illustrations/dots-cyan.png" alt="illustrations" class="bg-shape-3">
  <img src="~/images/illustrations/leaf-orange.png" alt="illustrations" class="bg-shape-4">
  <img src="~/images/illustrations/leaf-yellow.png" alt="illustrations" class="bg-shape-5">
  <img src="~/images/illustrations/dots-group-cyan.png" alt="illustrations" class="bg-shape-6">
  <img src="~/images/illustrations/leaf-cyan-lg.png" alt="illustrations" class="bg-shape-7">
</section>
<!-- /page title -->

<section class="section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-9 text-center ">
        <h1 class="text-hide">@Model.Title</h1>
        <h4 class="font-tertiary mb-3">@Model.Title</h4>
        <p class="font-secondary mb-5">Published @Model.CreatedDate.ToString("dd.MM.yyyy") by <span class="text-primary">@Model.Author</span
            class="text-primary"> on <span>@Model.Category.Name</span></p>
        <div class="content text-left ">
           @Html.Raw(@Model.Content)
        </div>
      </div>
      <div class="col-md-2 ">
      <div class="hashtags ">
          <span><h5>Categoriler</h5></span>
        <span>#<a href="">konu</a></span>
        <span>#<a href="">konu</a></span>
        <span>#<a href="">konu</a></span>
        <span>#<a href="">konu</a></span>
        <!-- Daha fazla hashtag ekleyebilirsiniz -->
      </div>
    </div>
    </div>
  </div>
</section>
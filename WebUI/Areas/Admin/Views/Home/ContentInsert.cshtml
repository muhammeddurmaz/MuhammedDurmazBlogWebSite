@{
}
@model HomePageCreateDTO
<section class="section">

    @await Html.PartialAsync("_sectionheader")
    <div class="section-body">
        <h2 class="section-title">Home Page</h2>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Full Summernote</h4>
                    </div>
                    <div class="card-body">
                        <form class="needs-validation" asp-controller="Home" asp-action="ContentInsert" method="post" novalidate="">
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Id</label>
                                <div class="col-sm-12 col-md-7"> 
                                    <input hidden="hidden" asp-for="Id" type="text" class="form-control" >
                                </div>
                            </div>
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Title</label>
                                <div class="col-sm-12 col-md-7">
                                    <input asp-for="Title" type="text" class="form-control" required="">
                                    <div class="invalid-feedback">
                                        Bu alana bir şeyler girmelisin !!
                                    </div>
                                </div>
                            </div>
                           
             
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Content</label>
                                <div class="col-sm-12 col-md-7">
                                    <textarea rows="10" cols="100" asp-for="AboutInfo" required=""></textarea>
                                    <div class="invalid-feedback">
                                        Bu alana hakkında bir şeyler yazmalısın !
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
                                <div class="col-sm-12 col-md-7">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
@using Entity.Dto.Projects
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@model ProjectCreateRequestDTO


<head>
    <!-- CSS Libraries -->
    <link rel="stylesheet" href="~/assets/modules/summernote/summernote-bs4.css">
    <link rel="stylesheet" href="~/assets/modules/codemirror/lib/codemirror.css">
    <link rel="stylesheet" href="~/assets/modules/codemirror/theme/duotone-dark.css">
    <link rel="stylesheet" href="~/assets/modules/jquery-selectric/selectric.css">

</head>

<section class="section">

    @await Html.PartialAsync("_sectionheader")
    <div class="section-body">
        <h2 class="section-title">Project</h2>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Full Summernote</h4>
                    </div>
                    <div class="card-body">
                        <form class="needs-validation" asp-controller="Project" asp-action="Insert" method="post" novalidate="">
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Name</label>
                                <div class="col-sm-12 col-md-7">
                                    <input asp-for="Name" type="text" class="form-control" required="">
                                    <div class="invalid-feedback">
                                        Bu alanı boş geçemezsin !
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Url</label>
                                <div class="col-sm-12 col-md-7">
                                    <input asp-for="Url" type="text" class="form-control" required="">
                                    <div class="invalid-feedback">
                                        Bu alanı boş geçemezsin !
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Image Url</label>
                                <div class="col-sm-12 col-md-7">
                                    <input asp-for="Image.Url" type="text" class="form-control" required="">
                                    <div class="invalid-feedback">
                                        Bu alanı boş geçemezsin !
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Stard Date</label>
                                <div class="col-sm-12 col-md-7">
                                    <input asp-for="StartDate" type="text" class="form-control datepicker" required="">
                                    <div class="invalid-feedback">
                                        Bu alanı boş geçemezsin !
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">End Date</label>
                                <div class="col-sm-12 col-md-7">
                                    <input asp-for="EndDate" type="text" class="form-control datepicker" required="">
                                    <div class="invalid-feedback">
                                        Bu alanı boş geçemezsin !
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row mb-4">
                                <div class="control-label col-form-label text-md-right col-12 col-md-3 col-lg-3">Aktif olsun mu ?</div>
                                <div class="col-sm-12 col-md-7">
                                    <label class="custom-switch " for="IsActive">
                                        <input asp-for="IsActive" type="checkbox" name="IsActive" id="IsActive" class="custom-switch-input">
                                        <span class="custom-switch-indicator"></span>

                                    </label>
                                </div>

                            </div>
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Description</label>
                                <div class="col-sm-12 col-md-7">
                                    <textarea asp-for="Description" class="summernote" required=""></textarea>
                                    <div class="invalid-feedback">
                                        Bu alanı boş geçemezsin !
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
                                <div class="col-sm-12 col-md-7">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>



@section Scripts {

    <!-- JS Libraies -->
    <script src="~/assets/modules/summernote/summernote-bs4.js"></script>
    <script src="~/assets/modules/codemirror/lib/codemirror.js"></script>
    <script src="~/assets/modules/codemirror/mode/javascript/javascript.js"></script>
    <script src="~/assets/modules/jquery-selectric/jquery.selectric.min.js"></script>
} 
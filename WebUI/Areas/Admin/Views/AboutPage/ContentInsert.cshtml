@using Entity.Dto.AboutPages
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@model AboutPageCreateDTO
<head>
    <!-- CSS Libraries -->
    <link rel="stylesheet" href="~/assets/modules/summernote/summernote-bs4.css">
    <link rel="stylesheet" href="~/assets/modules/codemirror/lib/codemirror.css">
    <link rel="stylesheet" href="~/assets/modules/codemirror/theme/duotone-dark.css">
    <link rel="stylesheet" href="~/assets/modules/jquery-selectric/selectric.css">

</head>

<section class="section">

    @await Html.PartialAsync("_sectionheader")
    <div class="section-body">
        <h2 class="section-title">About Page</h2>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Full Summernote</h4>
                    </div>
                    <div class="card-body">
                        <form class="needs-validation" asp-controller="AboutPage" asp-action="ContentInsert" method="post" novalidate="">
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Id</label>
                                <div class="col-sm-12 col-md-7">
                                    <input hidden="hidden" asp-for="Id" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Image Url</label>
                                <div class="col-sm-12 col-md-7">
                                    <input asp-for="Image.Url" type="text" class="form-control" required="">
                                    <div class="invalid-feedback">
                                        Bir foto url girmelisin!!
                                    </div>
                                </div>
                            </div>


                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Content</label>
                                <div class="col-sm-12 col-md-7">
                                    <textarea asp-for="desc" class="summernote" required=""></textarea>
                                    <div class="invalid-feedback">
                                        Makalenin Yazarı Boş geçilemez!
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
                                <div class="col-sm-12 col-md-7">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
@section Scripts {

    <!-- JS Libraies -->
    <script src="~/assets/modules/summernote/summernote-bs4.js"></script>
    <script src="~/assets/modules/codemirror/lib/codemirror.js"></script>
    <script src="~/assets/modules/codemirror/mode/javascript/javascript.js"></script>
    <script src="~/assets/modules/jquery-selectric/jquery.selectric.min.js"></script>
} 